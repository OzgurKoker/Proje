@model Proje.Models.Entities.WhyU
@{
    Layout = "~/Views/Shared/Admin/Admin_Layout.cshtml";

}
<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="card mb-4">
            <h5 class="card-header">Neden Biz ? - Düzenle</h5>

            <div class="card-body">
                <form method="post" asp-controller="Admin" asp-action="WhyUsDuzenle">
                    <input type="hidden" asp-for="Id" name="Id" />
                    <input type="hidden" asp-for="Sayi" name="Sayi" />



                    <div class="form-floating mb-3">
                        <input asp-for="Baslik" type="text" class="form-control" name="Baslik" id="Baslik" aria-describedby="floatingInputHelp" placeholder=" " required>
                        <label for="Baslik">Neden Biz ? - Başlık</label>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Aciklama" type="text" class="form-control" name="Aciklama" id="Aciklama" aria-describedby="floatingInputHelp" placeholder=" " required>
                        <label for="Aciklama">Neden Biz ? - Açıklama</label>

                    </div>
                    <div class="text-center row">
                        <div class="col-md-10">   <button type="submit" class="btn rounded-pill btn-dark w-100  mb-3">Kaydet</button></div>

                        <div class="col-md-2">
                            <a class="btn rounded-pill btn-secondary w-100" asp-controller="Admin" asp-action="WhyUs">Vazgeç</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>