@model Proje.Models.Entities.Slider
@{
    Layout = "~/Views/Shared/Admin/Admin_Layout.cshtml";

}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="col-md-6 col-lg-4 mb-3">
        <div class="card h-100">
            <form method="post" asp-controller="Admin" asp-action="HeroSil">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Baslik" />
                <input type="hidden" asp-for="Aciklama" />
                <input type="hidden" asp-for="Image" />
                <img class="card-img-top" src="~/assets/img/slide/@Model.Image">
                <div class="card-body">
                    <h5 class="card-title">@Model.Baslik</h5>
                    <p class="card-text">
                        @Model.Aciklama
                    </p>
                    <h5 class="alert alert-danger">Yukarıda Bilgileri Verilen İçeriği Silmek İstiyor Musunuz ?</h5>
                    <a asp-action="Hero" asp-controller="Admin" class="btn rounded-pill btn-dark">Vazgeç</a>
                    <button type="submit" class="btn rounded-pill btn-danger">Sil</button>

                </div>
            </form>
        </div>
    </div>
</div>