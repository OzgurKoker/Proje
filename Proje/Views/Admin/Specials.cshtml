@model Proje.Models.IndexViewModel
@{
    Layout = "~/Views/Shared/Admin/Admin_Layout.cshtml";

}
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 class="card-header">Spesiyaller</h5>
            @if (TempData["Alert"] != null)
        {
            <div class="alert alert-success">
                @TempData["Alert"]
            </div>
        }
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Fotoğraf</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Açıklama1</th>
                        <th>Açıklama2</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody class="">
                    @foreach (var item in Model.Specials)
                    {
                        <tr>
                            <td><img src="~/assets/img/@item.Image" style="max-width:150px;"></td>
                            <td>@item.SpecialsNav.Baslik</td>
                            <td>@item.Baslik</td>
                            <td>@item.Aciklama1</td>
                            <td>@item.Aciklama2</td>
                            <td>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="SpecialsDuzenle" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>