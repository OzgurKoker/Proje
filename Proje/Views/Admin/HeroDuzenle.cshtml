@model Proje.Models.Entities.Slider
@{
    Layout = "~/Views/Shared/Admin/Admin_Layout.cshtml";

}
<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">

        <div class="card mb-4">
            <h5 class="card-header">Slider - Düzenle</h5>

            <div class="card-body">
                <form enctype="multipart/form-data" method="post" asp-controller="Admin" asp-action="HeroDuzenle">
                    <input type="hidden" asp-for="Id" name="Id"/>
                    <input type="hidden" asp-for="Image" name="Image" />
                    <div class="text-center"><img style="max-width:300px;" src="~/assets/img/slide/@Model.Image"></div>

                    <input name="Foto" asp-for="Image" class="form-control mb-3 mt-3" type="file" id="Image">
                    <div class="form-floating mb-3">
                        <input asp-for="Baslik" type="text" class="form-control" name="Baslik" id="Baslik" aria-describedby="floatingInputHelp" placeholder=" " required>
                        <label for="Baslik">Başlık</label>

                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Aciklama" type="text" class="form-control" name="Aciklama" id="Aciklama" aria-describedby="floatingInputHelp" placeholder=" " required>
                        <label for="Aciklama">Açıklama</label>

                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn rounded-pill btn-dark w-100">Kaydet</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>