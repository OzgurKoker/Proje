@using Microsoft.AspNetCore.Components;
@using Microsoft.AspNetCore.Html;
@model Proje.Models.IndexViewModel
@{
    var data = Model.Titles.ElementAt(0);
}
<section id="why-us" class="why-us">
    <div class="container">


        <div class="section-title">
            <h2><span>@data.WhyUsBaslik</span></h2>
            <p>@data.WhyUsAciklama</p>
        </div>

        <div class="row">
            @foreach (var item in Model.WhyUs)
            {


                <div class="col-lg-4">
                    <div class="box">
                        <span>@item.Sayi</span>
                        <h4>@item.Baslik</h4>
                        <p>@item.Aciklama</p>
                    </div>
                </div>
            }
        </div>

    </div>
</section>