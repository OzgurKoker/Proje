@model Proje.Models.IndexViewModel
@{
    var data = Model.Titles.ElementAt(0);
    var data2 = Model.Topbars.ElementAt(0);
}
<section id="contact" class="contact">
    <div class="container">

        <div class="section-title">
            <h2><span>@data.ContactBaslik</span></h2>
            <p>@data.ContactAciklama</p>
        </div>
    </div>

    <div class="map">   
        <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m26!1m12!1m3!1d48173.40434818631!2d28.851156460046372!3d41.00692385088535!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m11!3e6!4m3!3m2!1d41.0395804!2d28.911637!4m5!1s0x14cab514b425dd4f%3A0x80051c8c02d34823!2sthe%20cqqrner!3m2!1d40.9749467!2d28.8685311!5e0!3m2!1str!2str!4v1677234544998!5m2!1str!2str" frameborder="0" allowfullscreen></iframe>
    </div>

    <div class="container mt-5">

        <div class="info-wrap">
            <div class="row">
                <div class="col-lg-3 col-md-6 info">
                    <i class="bi bi-geo-alt"></i>
                    <h4>Adres:</h4>
                    <p>@data2.Adres</p>
                </div>

                <div class="col-lg-3 col-md-6 info mt-4 mt-lg-0">
                    <i class="bi bi-clock"></i>
                    <h4>Çalışma Saatleri:</h4>
                    <p>@data2.Saat</p>
                </div>

                <div class="col-lg-3 col-md-6 info mt-4 mt-lg-0">
                    <i class="bi bi-envelope"></i>
                    <h4>Email:</h4>
                    <p>@data2.Email</p>
                </div>

                <div class="col-lg-3 col-md-6 info mt-4 mt-lg-0">
                    <i class="bi bi-phone"></i>
                    <h4>Telefon:</h4>
                    <p>@data2.Telefon</p>
                </div>
            </div>
        </div>
         
        <form method="post" asp-controller="Home" asp-action="Index" class="email-form">
            <div class="row">
                <div class="col-md-6 form-group">
                    <input type="text" name="name" class="form-control" id="name" placeholder="İsim" required>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                    <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
                </div>
            </div>
            <div class="form-group mt-3">
                <input type="text" class="form-control" name="konu" id="konu" placeholder="Konu" required>
            </div>
            <div class="form-group mt-3">
                <textarea class="form-control" name="mesaj" rows="5" placeholder="Mesaj" required></textarea>
            </div>

            <div class="text-center"><button type="submit">Mesaj Gönder</button></div>
        </form>
  
    </div>
</section><!-- End Contact Section -->