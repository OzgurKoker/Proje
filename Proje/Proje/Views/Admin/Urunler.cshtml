@model Proje.Models.IndexViewModel
@{
    Layout = "~/Views/Shared/Admin/Admin_Layout.cshtml";

}
<div class="container-xxl flex-grow-1 container-p-y">

    <div class="card">
        <h5 style="    display: flex;
    align-items: center;
    justify-content: space-between;" class="card-header">
            Ürünler<a asp-controller="Admin" asp-action="UrunEkle"><button class="btn rounded-pill btn-dark" style="width:120px;">Ekle</button></a>
        </h5>
        @if (TempData["Alert"] != null)
        {
            <div class="alert alert-success">
                @TempData["Alert"]
            </div>
        }
        <div class="table-responsive text-nowrap">
            <table id="tblUrunler" class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Kategori Adı</th>
                        <th>Açıklama</th>
                        <th>Fiyat</th>
                        <th>Düzenle</th>
                    </tr>
                </thead>
                <tbody class="">       
                    
                    @foreach (var item in Model.Uruns)
                    {
                        <tr>
                            <td>@item.UrunAdi</td>
                            <td>@item.UrunKategori.KategoriAdi</td>
                            <td>@item.UrunAciklama</td>
                            <td>@item.UrunFiyat</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="UrunDuzenle" asp-route-id="@item.Id"><i class="bx bx-edit-alt me-1"></i>Düzenle</a>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="UrunSil" asp-route-id="@item.Id"><i class="bx bx-trash me-1"></i>Sil</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

